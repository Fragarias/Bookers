<h1>Books</h1>

<table class="table">
  <thead>
    <th>Title</th>
    <th>Body</th>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td class="table_book"><%= book.title %></td>
        <td class="table_book"><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id), class: "link" %></td>
        <td><%= link_to "Edit", edit_book_path(book.id), class: "link" %></td>
        <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?", class: "link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<h2>New book</h2>
<div class="error">
  <% if @book.errors.any? %>
    <%= @book.errors.count %> error prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |messages| %>
        <li><%= messages %></li>
      <% end %>
     </ul>
  <% end %>
</div>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Body</p>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
