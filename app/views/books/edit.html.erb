<h2>Editing Book</h2>
<div class="error">
  <% if @book.errors.any? %>
    <%= @book.errors.count %> error prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |messages| %>
        <li><%= messages %></li>
      <% end %>
    </ul>
  <% end %>
</div>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Body</p>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>
<% end %>

<div class="link_div">
  <%= link_to "Show", book_path(@book.id), class: "link" %>
  <%= link_to "Back", books_path, class: "link" %>
</div>